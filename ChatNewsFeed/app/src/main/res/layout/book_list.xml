<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:padding="5dp"
                android:background="#E2E0E0"

                android:layout_gravity="top"
                android:layout_height="wrap_content">
    <TextView
            android:text="BooksName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/userName"
            android:visibility="visible"
            android:padding="5dp"
            android:textSize="18sp"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="0dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="0dp"
            android:layout_marginRight="5dp"
            android:layout_alignParentLeft="true"/>
    <TextView
            android:text="Availabilty:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Availablitytext"
            android:layout_alignParentStart="true"
            android:layout_marginStart="5dp"
            android:textSize="18sp"
            android:visibility="visible"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/userName"/>
    <TextView
            android:text="10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/available"
            android:textSize="18sp"
            android:visibility="visible"
            android:layout_marginLeft="1dp"
            android:layout_marginStart="1dp"
            android:layout_alignTop="@+id/Availablitytext"
            android:layout_marginTop="1dp"
            android:layout_toEndOf="@+id/Availablitytext"
            android:layout_toRightOf="@+id/Availablitytext"/>
</RelativeLayout>