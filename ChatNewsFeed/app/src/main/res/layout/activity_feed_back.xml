<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="5dp"
        tools:context=".FeedBackActivity">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:layout_margin="5dp"
            android:background="@drawable/bordersround">
        <TextView
                android:text="For more Info, visit our college site..."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textStyle="bold|italic"
                android:id="@+id/info"
                android:visibility="visible"
                android:textSize="15sp"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/link1"
                android:textAlignment="center"
                android:text="https://sksasc.somaiya.edu/sksasc/"
                android:visibility="visible"
                android:textColorLink="@color/design_default_color_primary_dark"
                android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Subtitle"
                android:autoLink="web"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>
        <TextView
                android:text="https://www.somaiya.edu/en"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/link2"
                android:autoLink="web"
                android:textAlignment="center"
                android:visibility="visible"
                android:textColorLink="@color/design_default_color_primary_dark"
                android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Subtitle"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="135dp"
            android:layout_margin="5dp"
            android:background="@drawable/bordersround">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:id="@+id/feedback"
                android:visibility="visible"
                android:textSize="20sp"
                android:text="FeedBack"
                android:layout_marginLeft="140dp"
                android:textStyle="bold"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:inputType="textLongMessage|textMultiLine|textAutoComplete|textCapWords"
                android:ems="10"
                android:layout_margin="5dp"
                android:textSize="20sp"
                android:background="@drawable/bordersquare"
                android:id="@+id/editText_feedBack"
                android:hint=" Drop your feedback here..."
                android:visibility="visible"/>
        <Button
                android:text="Submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/submit_Feedback"
                android:gravity="center"
                android:background="@drawable/buttonborder"
                android:textSize="15sp"
                android:textAppearance="@style/TextAppearance.AppCompat.Button"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:textColor="@android:color/background_dark"/>
    </LinearLayout>

</LinearLayout>