<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

>
    <LinearLayout
            android:orientation="vertical"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Search Books"
                android:ems="10"
                android:padding="10dp"
                android:inputType="textAutoComplete|textCapCharacters"
                android:id="@+id/searchText"
                android:drawableLeft="@drawable/ic_search_black_24dp"/>


        <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:id="@+id/list_view"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/searchText"
                android:layout_marginTop="14dp"
                android:background="@drawable/bordersround"
                android:layout_alignParentLeft="true"
                android:layout_height="match_parent" android:layout_marginBottom="8dp" android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp" android:layout_marginRight="8dp" android:layout_marginStart="8dp"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/bordersround"
                android:visibility="visible">
            <TextView
                    android:text="Library Name:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/library_name"
                    android:layout_marginLeft="5dp"
                    android:textSize="20sp"
                    android:padding="5dp"
                    android:visibility="visible"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/library_Textname"
                    android:visibility="visible"
                    android:text="S.K Somaiya College"
                    android:padding="5dp"
                    android:textSize="20sp"
                    android:layout_marginBottom="5dp"/>

        </LinearLayout>
    </LinearLayout>
</ScrollView>