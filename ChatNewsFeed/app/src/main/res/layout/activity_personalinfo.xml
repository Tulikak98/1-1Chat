<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".PersonalinfoActivity">

    <Button
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/profile_pic"
            android:layout_below="@id/backToSettings"
            android:layout_centerHorizontal="true"
            android:padding="10dp"
            android:hint="Select Photo"
            android:background="@drawable/round_photo"
            android:visibility="visible"/>
    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/profile_pic_upload"
            android:layout_below="@id/backToSettings"
            android:layout_centerHorizontal="true"
            app:civ_border_width="2dp"
            android:padding="10dp"
            android:visibility="visible"/>

    <EditText android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/username"
              android:layout_below="@id/profile_pic"
              android:inputType="textPersonName"
              android:hint="Username"
              android:drawableLeft="@drawable/edit_profile"
              android:textColor="@android:color/black"
              android:layout_marginLeft="20dp"
              android:layout_marginRight="20dp"
              android:padding="10dp"
              android:layout_marginTop="10dp"
              android:visibility="visible"/>

    <Button android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/username"
            android:id="@+id/update"
            android:text="Update"
            android:textAlignment="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:textSize="16dp"
            style="@style/Widget.AppCompat.Button.Colored"/>


    <ImageView
            android:layout_width="40dp"
            android:id="@+id/backbutton"
            android:padding="5dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="18dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:visibility="visible"
            android:layout_height="30dp"
            tools:src="@drawable/back_28"
            app:srcCompat="@drawable/back_28"/>

    <TextView
            android:text="Personal Info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/backToSettings"
            android:padding="20dp"
            android:textSize="20sp"
            android:layout_marginLeft="25dp"
            android:textColor="@android:color/background_dark"
            android:visibility="visible"/>

</RelativeLayout>